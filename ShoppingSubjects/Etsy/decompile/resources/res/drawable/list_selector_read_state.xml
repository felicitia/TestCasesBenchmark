<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_activated"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_transparent"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_pressed"/>
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/item_focused" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_focused"/>
        </shape>
    </item>
    <item app:state_read="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/sk_white"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</selector>
