<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sk_btn_corner_radius"/>
            <solid android:color="@color/button_paypal_disabled"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sk_btn_corner_radius"/>
            <solid android:color="@color/button_paypal_selected"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sk_btn_corner_radius"/>
            <solid android:color="@color/button_paypal"/>
        </shape>
    </item>
</selector>
