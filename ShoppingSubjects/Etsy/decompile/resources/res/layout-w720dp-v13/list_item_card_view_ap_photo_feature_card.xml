<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/photo_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_medium">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/appreciation_photo" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_medium_large">
            <ImageView android:id="@+id/buyer_avatar" android:layout_width="@dimen/ap_landing_page_avatar_size" android:layout_height="@dimen/ap_landing_page_avatar_size"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_medium_large" android:layout_marginRight="@dimen/margin_medium_large">
                <TextView android:id="@+id/date_text" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextLightGrey.Small.Bold"/>
                <TextView android:id="@+id/message_text" android:layout_width="@dimen/ap_landing_page_message_width" android:layout_height="wrap_content" style="@style/TextGrey.Large"/>
            </LinearLayout>
            <include layout="@layout/list_item_card_view_listing_clean_actions"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
