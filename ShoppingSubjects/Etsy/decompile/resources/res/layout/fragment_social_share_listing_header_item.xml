<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_horizontal" android:id="@+id/listing_matte" android:layout_width="@dimen/social_share_listing_image_width" android:layout_height="wrap_content" style="@style/EtsyCardViewStyle">
