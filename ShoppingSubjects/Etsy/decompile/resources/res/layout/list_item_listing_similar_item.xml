<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/listing_matte" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/CardStyle.Listing">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/listing_image" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" android:contentDescription="@string/listing_image_content_description"/>
        <View android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/divider_height"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/listing_text_container" android:padding="@dimen/fixed_small" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:ellipsize="end" android:id="@+id/listing_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" style="@style/TextGrey.Small"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/listing_info" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:ellipsize="end" android:id="@+id/shopname" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_small" android:maxLines="1" android:layout_weight="1" style="@style/TextMidGrey.Small"/>
                <TextView android:textAppearance="@style/Price.Small.Bold" android:ellipsize="marquee" android:id="@+id/listing_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
