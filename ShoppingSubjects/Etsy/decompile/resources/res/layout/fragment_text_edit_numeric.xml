<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_xxlarge" android:layout_marginTop="@dimen/margin_xlarge" android:layout_marginRight="@dimen/margin_xxlarge">
        <TextView android:textSize="@dimen/text_super_ultra_large" android:id="@+id/before_decimal_text" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextMidGrey.Large"/>
        <EditText android:textSize="@dimen/text_super_ultra_large" android:id="@+id/edit_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:minEms="@integer/edit_number_default_min_chars" android:digits="0123456789.," android:inputType="numberDecimal" android:imeOptions="actionDone"/>
        <TextView android:textSize="@dimen/text_super_ultra_large" android:id="@+id/after_decimal_text" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextMidGrey.Large"/>
    </LinearLayout>
    <TextView android:textColor="@color/text_warn" android:gravity="center" android:id="@+id/error_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_xxlarge" android:layout_marginTop="@dimen/margin_small" android:layout_marginRight="@dimen/margin_xxlarge" style="@style/TextLightGrey.Small"/>
    <TextView android:gravity="center" android:id="@+id/help_subtext" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_xxlarge" android:layout_marginTop="@dimen/margin_small" android:layout_marginRight="@dimen/margin_xxlarge" style="@style/TextLightGrey"/>
    <com.etsy.android.iconsy.views.IconView android:layout_gravity="center_horizontal" android:id="@+id/help_button" android:visibility="gone" style="@style/HelpIcon"/>
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
