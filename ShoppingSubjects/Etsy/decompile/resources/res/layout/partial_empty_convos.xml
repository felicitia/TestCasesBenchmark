<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/empty_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:padding="@dimen/padding_large" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.etsy.android.uikit.view.LazyNativeAssetImageView android:id="@+id/empty_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_large" app:img="@drawable/error_sorry_girl"/>
            <TextView android:gravity="center" android:id="@+id/empty_view_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/empty_convos" style="@style/sk_text_title_larger"/>
            <TextView android:gravity="center" android:id="@+id/empty_view_subtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_large" android:maxWidth="400dp" android:text="@string/convos_empty_subtext" style="@style/TextGrey.Large"/>
            <Button android:gravity="center" android:id="@+id/empty_button" android:paddingLeft="@dimen/padding_xlarge" android:paddingRight="@dimen/padding_xlarge" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/button_height" android:layout_marginTop="@dimen/margin_large" style="@style/ButtonWhiteV2"/>
        </LinearLayout>
    </ScrollView>
    <View android:id="@+id/convo_vertical_divider" style="@style/Divider.Vertical.Gradient"/>
</FrameLayout>
