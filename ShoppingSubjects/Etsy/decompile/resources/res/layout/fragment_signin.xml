<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/txt_title" android:paddingTop="@dimen/fixed_large" android:paddingBottom="@dimen/fixed_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large" android:text="@string/sign_in" style="@style/sk_text_title"/>
    <TextView android:id="@+id/txt_subtitle" android:paddingBottom="@dimen/fixed_large" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginTop="@dimen/neg_fixed_medium" android:layout_marginRight="@dimen/margin_large" style="@style/TextGrey"/>
    <View android:id="@+id/divider" android:background="@color/list_divider_dark" android:layout_width="match_parent" android:layout_height="@dimen/divider_height"/>
    <TextView android:id="@+id/txt_error" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large" style="@style/SignInErrorBoxText"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:id="@+id/edit_username" android:nextFocusDown="@+id/edit_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large" android:hint="@string/email_username_hint" android:maxLines="1" android:inputType="textEmailAddress" style="@style/EditText.RegSignin"/>
            <EditText android:id="@+id/edit_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_large" android:hint="@string/password_hint" android:inputType="none|text|textNoSuggestions|textPassword" android:imeOptions="actionDone" style="@style/EditText.RegSignin"/>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="@dimen/padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="normal" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/forgot_password_link" android:background="@drawable/list_selector" android:paddingLeft="@dimen/list_horizontal_padding" android:paddingRight="@dimen/list_horizontal_padding" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/forgot_password_title" android:layout_weight="1" style="@style/TextDarkGrey.Bold"/>
                <com.etsy.android.stylekit.EtsyButton android:id="@+id/button_signin" android:paddingLeft="@dimen/padding_large" android:paddingRight="@dimen/padding_large" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large" android:text="@string/signin_button_text" style="@style/sk_btn_primary"/>
            </LinearLayout>
            <View android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/divider_height" android:layout_marginBottom="@dimen/padding_medium"/>
            <Button android:id="@+id/signin_button_google" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sk_space_4" android:layout_marginTop="@dimen/sk_space_3" android:layout_marginRight="@dimen/sk_space_4" style="?attr/buttonExternalAccountGoogle"/>
            <Button android:id="@+id/signin_button_facebook" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sk_space_4" android:layout_marginTop="@dimen/fixed_medium" android:layout_marginRight="@dimen/sk_space_4" style="?attr/buttonExternalAccountFacebook"/>
            <TextView android:textStyle="normal" android:gravity="center" android:layout_gravity="center" android:id="@+id/switch_to_register" android:paddingLeft="@dimen/list_horizontal_padding" android:paddingRight="@dimen/list_horizontal_padding" android:layout_width="wrap_content" android:layout_height="@dimen/list_item_height" android:text="@string/sign_in_switch_to_register" style="?attr/buttonTextBlackBorderless"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
