    <TextView android:ellipsize="end" android:id="@+id/attached_listing_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sk_space_2" android:layout_marginTop="@dimen/sk_space_2" android:layout_marginRight="@dimen/sk_space_2" android:maxLines="1" app:layout_constraintEnd_toStartOf="@+id/remove_attached_listing_button" app:layout_constraintStart_toEndOf="@+id/attached_listing_image" app:layout_constraintTop_toTopOf="0" style="@style/TextBlack"/>
