    <android.support.design.widget.FloatingActionButton android:id="@+id/send_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="@color/white" app:backgroundTint="@drawable/btn_send_selector" app:elevation="4dp" app:fabSize="1" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:srcCompat="@drawable/ic_send" app:useCompatPadding="true"/>
    <View android:background="@color/sk_gray_20" android:layout_width="match_parent" android:layout_height="1dp" app:layout_constraintTop_toTopOf="0"/>
</android.support.constraint.ConstraintLayout>
