    <android.support.constraint.Group android:id="@+id/attached_listing_group" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:constraint_referenced_ids="attached_listing_image,attached_listing_title,attached_listing_price,remove_attached_listing_button"/>
