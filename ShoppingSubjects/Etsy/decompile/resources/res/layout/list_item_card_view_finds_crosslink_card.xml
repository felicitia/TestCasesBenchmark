<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/editors_picks_frame" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/CardViewElementStyle">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
        <com.etsy.android.uikit.view.ImageViewWithAspectRatio android:id="@+id/main_image" android:layout_width="0dp" android:layout_height="wrap_content" android:scaleType="centerCrop" android:adjustViewBounds="false" android:layout_weight="1" app:heightRatio="0.8"/>
        <RelativeLayout android:gravity="center_vertical" android:padding="@dimen/padding_medium" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:gravity="start" android:id="@+id/editors_picks_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small" android:text="@string/editors_picks" android:lines="1" style="@style/Finds.Label"/>
            <TextView android:gravity="start" android:id="@+id/page_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/editors_picks_label" android:lineSpacingMultiplier="@dimen/line_spacing_multiplier_tight" style="@style/Finds.Title"/>
        </RelativeLayout>
    </LinearLayout>
    <com.etsy.android.stylekit.EtsyButton android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/draft_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/draft" android:textAllCaps="true" style="@style/sk_btn_primary"/>
</android.support.v7.widget.CardView>
