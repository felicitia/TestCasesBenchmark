<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:foreground="@drawable/bg_ten_percent_black_selector">
    <ImageView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <ImageView android:layout_gravity="center" android:id="@+id/play_video_icon" android:visibility="gone" android:layout_width="@dimen/play_video_icon_width" android:layout_height="@dimen/play_video_icon_height" android:tint="@color/white_transparent" app:srcCompat="@drawable/sk_ic_play"/>
    <FrameLayout android:layout_gravity="center" android:id="@+id/activity_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.etsy.android.uikit.view.LoadingIndicatorView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/spinner_white" android:scaleType="center"/>
    </FrameLayout>
</FrameLayout>
