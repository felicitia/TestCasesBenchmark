    </LinearLayout>
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="@dimen/local_map_arrow_width" android:layout_height="@dimen/local_map_arrow_height" android:layout_marginTop="@dimen/local_map_arrow_negative_offset" android:src="@drawable/ic_map_arrow"/>
</LinearLayout>
