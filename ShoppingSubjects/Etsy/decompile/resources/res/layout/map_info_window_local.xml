<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_map_card_outline" android:paddingLeft="@dimen/local_map_info_window_border" android:paddingTop="@dimen/local_map_info_window_border" android:paddingRight="@dimen/local_map_info_window_border" android:paddingBottom="@dimen/fixed_large" android:layout_width="@dimen/local_map_info_window_width" android:layout_height="wrap_content">
        <TextView android:ellipsize="end" android:id="@+id/market_date" android:paddingLeft="@dimen/fixed_large" android:paddingTop="@dimen/fixed_medium_large" android:paddingRight="@dimen/fixed_large" android:paddingBottom="@dimen/fixed_medium_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" style="@style/TextGrey.Large"/>
        <include android:id="@+id/image_layout_1" layout="@layout/local_image_row"/>
        <include android:id="@+id/image_layout_2" layout="@layout/local_image_row"/>
