        <Button android:id="@+id/header_follow_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_marginRight="@dimen/margin_medium" android:text="@string/follow" style="@style/ButtonWhiteV2.Header"/>
        <FrameLayout android:id="@+id/header_favorite_button" android:visibility="gone" android:layout_marginRight="@dimen/margin_medium" style="?attr/buttonWhiteV2Image">
            <ImageView android:id="@+id/heart_image" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_favorite_selector" android:scaleType="center"/>
        </FrameLayout>
        <ImageButton android:id="@+id/header_contact_button" android:visibility="gone" android:layout_marginRight="@dimen/margin_large" android:tint="@color/sk_orange_30" app:srcCompat="@drawable/sk_ic_conversations" style="?attr/buttonWhiteV2Image"/>
    </LinearLayout>
</RelativeLayout>
