<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/add_coupon_code" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/MultiShopCartGroupItem">
    <LinearLayout android:orientation="horizontal" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="@dimen/button_height">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/icon" android:layout_width="@dimen/sk_size_icon_smaller" android:layout_height="@dimen/sk_size_icon_smaller" android:tint="@color/sk_orange_30" app:srcCompat="@drawable/sk_ic_tag"/>
        <Button android:textColor="@color/sk_orange_30" android:id="@+id/btn_add_coupon_code" style="@style/TextButton"/>
        <EditText android:id="@+id/txt_coupon_code" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:textAllCaps="true" style="@style/TextGrey"/>
        <Button android:textColor="@color/sk_orange_30" android:id="@+id/btn_apply" android:visibility="gone" android:text="@string/apply" style="@style/TextButton"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/text_medium" android:textColor="@color/red" android:id="@+id/txt_coupon_error" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/sk_space_4"/>
</LinearLayout>
