<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RadioGroup android:id="@+id/single_listing_checkout_payment_methods" android:paddingLeft="@dimen/sk_space_8" android:paddingTop="@dimen/sk_space_4" android:paddingRight="@dimen/sk_space_8" android:paddingBottom="@dimen/sk_space_4" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/single_listing_checkout_international_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/list_divider_dark" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:padding="@dimen/sk_space_8" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/single_listing_checkout_item_total_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/single_listing_checkout_item_total" android:layout_alignParentLeft="true" style="@style/ListingLineItemTitle"/>
            <TextView android:id="@+id/single_listing_checkout_item_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" style="@style/ListingLineItemTitle"/>
            <RelativeLayout android:id="@+id/single_listing_checkout_shipping_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/single_listing_checkout_item_total_label">
                <TextView android:id="@+id/single_listing_checkout_shipping_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/shipping" android:layout_alignParentLeft="true" style="@style/ListingLineItemTitle"/>
                <TextView android:id="@+id/single_listing_checkout_shipping" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" style="@style/ListingLineItemTitle"/>
                <TextView android:id="@+id/single_listing_checkout_shipping_destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/single_listing_checkout_shipping_label" style="@style/ListingLineItemBody"/>
            </RelativeLayout>
            <View android:id="@+id/single_listing_checkout_divider" android:background="@color/list_divider_dark" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="@dimen/sk_space_2" android:layout_below="@+id/single_listing_checkout_shipping_container"/>
            <TextView android:id="@+id/single_listing_checkout_total_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total" android:layout_below="@+id/single_listing_checkout_divider" android:layout_alignParentLeft="true" style="@style/ListingLineItemTitle"/>
            <TextView android:id="@+id/single_listing_checkout_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/single_listing_checkout_divider" android:layout_alignParentRight="true" style="@style/ListingLineItemTitle"/>
            <TextView android:id="@+id/single_listing_checkout_vat_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sk_space_2" android:layout_marginBottom="@dimen/sk_space_1" android:text="@string/single_listing_checkout_vat_included" android:layout_below="@+id/single_listing_checkout_total" style="@style/sk_text_body_smaller"/>
            <TextView android:textColor="@color/sk_gray_50" android:id="@+id/single_listing_checkout_transparent_price_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sk_space_2" android:layout_marginBottom="@dimen/sk_space_1" android:layout_below="@+id/single_listing_checkout_vat_description" style="@style/sk_text_body_smaller"/>
            <TextView android:id="@+id/single_listing_checkout_conversion_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/single_listing_checkout_conversion_msg" android:layout_below="@+id/single_listing_checkout_transparent_price_msg" style="@style/sk_text_body_smaller"/>
        </RelativeLayout>
    </LinearLayout>
    <com.etsy.android.stylekit.EtsyButton android:id="@+id/single_listing_checkout_proceed" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sk_space_4" android:layout_marginRight="@dimen/sk_space_4" android:layout_marginBottom="@dimen/sk_space_4" android:text="@string/listing_proceed_to_checkout" style="@style/sk_btn_primary"/>
</LinearLayout>
