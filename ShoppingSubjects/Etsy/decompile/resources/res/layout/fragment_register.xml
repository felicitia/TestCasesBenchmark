<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/txt_title" android:padding="@dimen/margin_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/register" style="@style/sk_text_title"/>
        <TextView android:id="@+id/txt_subtitle" android:paddingLeft="@dimen/margin_large" android:paddingRight="@dimen/fixed_large" android:paddingBottom="@dimen/fixed_large" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/neg_medium" style="@style/TextGrey"/>
        <View android:background="@color/list_divider_dark" android:layout_width="match_parent" android:layout_height="@dimen/divider_height"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/padding_large_xlarge" android:paddingBottom="@dimen/padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/social_header" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/avatar" android:visibility="gone" android:layout_width="@dimen/user_avatar_image" android:layout_height="@dimen/user_avatar_image">
                    <ImageView android:id="@+id/avatar_image" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/UserAvatarLarge"/>
                    <ImageView android:id="@+id/avatar_source" android:paddingRight="@dimen/help_icon_padding" android:layout_width="@dimen/help_icon_size" android:layout_height="@dimen/help_icon_size" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView android:gravity="center_horizontal" android:id="@+id/social_title" android:padding="@dimen/margin_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/register" android:lineSpacingMultiplier="@dimen/line_spacing_multiplier_tight" style="@style/sk_text_title"/>
            </LinearLayout>
            <TextView android:id="@+id/txt_error" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_large" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/margin_large" style="@style/SignInErrorBoxText"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/optional_fields" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:id="@+id/edit_name_section" android:paddingLeft="@dimen/padding_large" android:paddingRight="@dimen/padding_large" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:ellipsize="end" android:id="@+id/edit_first_name" android:nextFocusDown="@+id/edit_last_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding_medium" android:hint="@string/first_name_hint" android:maxLines="1" android:layout_weight="1" android:inputType="none|text|textCapWords|textEmailAddress|textShortMessage|textPersonName" style="@style/EditText.RegSignin"/>
                    <EditText android:ellipsize="end" android:id="@+id/edit_last_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_medium" android:hint="@string/last_name_hint" android:maxLines="1" android:layout_weight="1" android:inputType="none|text|textCapWords|textEmailAddress|textShortMessage|textPersonName" style="@style/EditText.RegSignin"/>
                </LinearLayout>
                <TextView android:id="@+id/name_msg" android:paddingLeft="@dimen/padding_large" android:paddingRight="@dimen/padding_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_small" android:layout_marginTop="@dimen/margin_small" android:layout_marginRight="@dimen/margin_small" android:text="@string/registration_name_info" style="@style/TextLightGrey.Small"/>
            </LinearLayout>
            <AutoCompleteTextView android:ellipsize="end" android:id="@+id/edit_email" android:nextFocusDown="@+id/edit_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_large" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/padding_large" android:hint="@string/your_email_hint" android:maxLines="1" android:completionThreshold="1" android:inputType="textEmailAddress" android:imeOptions="actionNext" style="@style/EditText.AutoComplete.RegSignin"/>
            <EditText android:ellipsize="end" android:id="@+id/edit_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_large" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/padding_large" android:hint="@string/convo_username_hint" android:maxLines="1" android:inputType="none|text|textNoSuggestions|textUri|textPassword|textVisiblePassword" style="@style/EditText.RegSignin"/>
            <TextView android:id="@+id/username_msg" android:paddingLeft="@dimen/padding_large" android:paddingRight="@dimen/padding_large" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_small" android:layout_marginTop="@dimen/margin_small" android:layout_marginRight="@dimen/margin_small" android:text="@string/registration_username_info" style="@style/TextLightGrey.Small"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/edit_password_section" android:paddingLeft="@dimen/padding_large" android:paddingRight="@dimen/padding_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_large">
                <EditText android:ellipsize="end" android:id="@+id/edit_register_password" android:nextFocusDown="@+id/edit_password_confirm" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding_medium" android:hint="@string/password_hint" android:maxLines="1" android:layout_weight="1" android:inputType="none|text|textNoSuggestions|textPassword" style="@style/EditText.RegSignin"/>
                <EditText android:ellipsize="end" android:id="@+id/edit_password_confirm" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_medium" android:hint="@string/confirm_password_hint" android:maxLines="1" android:layout_weight="1" android:inputType="none|text|textNoSuggestions|textPassword" style="@style/EditText.RegSignin"/>
            </LinearLayout>
            <com.etsy.android.stylekit.EtsyButton android:id="@+id/button_register" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_large" android:layout_marginTop="@dimen/margin_large" android:layout_marginRight="@dimen/padding_large" android:layout_marginBottom="@dimen/padding_small" android:text="@string/register" style="@style/sk_btn_primary"/>
            <TextView android:textStyle="normal" android:textColorLink="@color/sk_orange_30" android:id="@+id/text_terms_of_use" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_large" android:layout_marginTop="@dimen/margin_medium" android:layout_marginRight="@dimen/padding_large" android:layout_marginBottom="@dimen/padding_medium" style="@style/TextLightGrey.Small"/>
            <View android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/divider_height" android:layout_marginTop="@dimen/padding_small" android:layout_marginBottom="@dimen/padding_medium"/>
            <Button android:id="@+id/register_button_google" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sk_space_4" android:layout_marginTop="@dimen/sk_space_3" android:layout_marginRight="@dimen/sk_space_4" style="?attr/buttonExternalAccountGoogle"/>
            <Button android:id="@+id/register_button_facebook" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sk_space_4" android:layout_marginTop="@dimen/fixed_medium" android:layout_marginRight="@dimen/sk_space_4" style="?attr/buttonExternalAccountFacebook"/>
            <TextView android:textStyle="normal" android:gravity="center" android:layout_gravity="center" android:id="@+id/switch_to_sign_in" android:paddingLeft="@dimen/list_horizontal_padding" android:paddingRight="@dimen/list_horizontal_padding" android:paddingBottom="0dp" android:layout_width="wrap_content" android:layout_height="@dimen/list_item_height" android:text="@string/register_switch_to_sign_in" style="?attr/buttonTextBlackBorderless"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
