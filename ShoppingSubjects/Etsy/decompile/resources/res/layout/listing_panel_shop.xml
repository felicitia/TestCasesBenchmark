<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/shop" android:paddingTop="@dimen/listing_card_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/txt_made_by_shop_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/listing_card_padding" android:layout_marginBottom="@dimen/fixed_tiny" style="@style/ListingSectionTitle"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/panel_shop_card_header" android:background="@drawable/bg_ten_percent_black_selector" android:paddingLeft="@dimen/shop_header_padding" android:paddingTop="@dimen/shop_header_padding" android:paddingRight="@dimen/shop_header_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/shop_home_info_header"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/shop_listing_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="@dimen/margin_medium"/>
        <View android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/divider_height" android:layout_marginTop="@dimen/margin_medium"/>
        <TextView android:gravity="center" android:id="@+id/txt_shop_visit" android:background="@drawable/bg_ten_percent_black_selector" android:layout_width="match_parent" android:layout_height="@dimen/button_listing_height" android:text="@string/visit_shop" style="@style/TextBlue.Large.Bold"/>
        <View android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/divider_height"/>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/panel_shop_about" android:background="@drawable/bg_ten_percent_black_selector" android:padding="@dimen/padding_large" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_shop_about_avatar" android:layout_width="@dimen/listing_shop_about_avatar" android:layout_height="@dimen/listing_shop_about_avatar" android:layout_marginRight="@dimen/padding_large" android:contentDescription="@string/shop_member_avatar_content_description"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:id="@+id/txt_meet_owners" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextDarkGrey.Bold"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_tiny" android:text="@string/listing_shop_learn_about" style="@style/TextGrey.Small"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
