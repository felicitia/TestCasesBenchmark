<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/select_wishlist_dialog_view" android:background="@drawable/white_background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="match_parent" android:layout_height="@dimen/select_wishlist_header_height">
            <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/select_wishlist_cancel_button" android:layout_width="@dimen/wishlist_close_button_size" android:layout_height="@dimen/wishlist_close_button_size" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding" app:drawable="@drawable/textview_clear_96"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/twenty_four_padding" android:paddingRight="@dimen/twenty_four_padding" android:paddingBottom="@dimen/sixteen_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="@dimen/select_wishlist_listview_height">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_menu" android:textStyle="bold" android:textColor="@color/text_primary" android:ellipsize="end" android:gravity="center" android:paddingBottom="@dimen/sixteen_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/triple_screen_padding" android:layout_marginRight="@dimen/triple_screen_padding" android:text="@string/choose_a_wishlist" android:maxLines="1" android:resizeable="true"/>
            <View android:background="@color/cool_gray5" android:layout_width="match_parent" android:layout_height="1dp"/>
            <com.contextlogic.wish.ui.loading.PrimaryProgressBar android:layout_gravity="center" android:id="@+id/select_wishlist_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Widget.Wish.ProgressBar.Small"/>
            <com.contextlogic.wish.ui.loading.ThreeDotProgressBar android:layout_gravity="center" android:id="@+id/select_wishlist_three_dot_progress_bar" android:paddingTop="@dimen/loading_spinner_padding_top" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:small="true"/>
            <ListView android:id="@+id/select_wishlist_listview" android:animationCache="false" android:layout_width="match_parent" android:layout_height="@dimen/select_wishlist_listview_height" android:scrollingCache="false" android:cacheColorHint="@color/transparent" android:divider="@null" android:dividerHeight="0dp"/>
            <View android:id="@+id/select_wishlist_bottom_divider" android:background="@color/cool_gray5" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textColor="@color/cool_gray1" android:gravity="center" android:id="@+id/select_wishlist_empty_message" android:paddingLeft="@dimen/thirty_two_padding" android:paddingRight="@dimen/thirty_two_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_wishlist_create_one_now"/>
                <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="end" android:orientation="horizontal" android:id="@+id/select_wishlist_add_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sixteen_padding">
                    <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/half_screen_padding" android:adjustViewBounds="true" android:layout_marginEnd="@dimen/half_screen_padding" app:drawable="@drawable/action_bar_add_primary"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textColor="@color/main_primary" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/new_wishlist"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
