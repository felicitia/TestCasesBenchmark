<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false" android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/checkbox_button_disabled_checked"/>
                    <size android:height="@dimen/checkbox_size" android:width="@dimen/checkbox_size"/>
                    <corners android:radius="@dimen/checkbox_corner_radius"/>
                </shape>
            </item>
            <item>
                <inset android:insetLeft="@dimen/checkbox_insetLeft" android:insetRight="@dimen/checkbox_insetRight" android:insetTop="@dimen/checkbox_insetTop" android:insetBottom="@dimen/checkbox_insetBottom">
                    <bitmap android:src="@drawable/white_check_small"/>
                </inset>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/checkbox_button_disabled_unchecked"/>
            <size android:height="@dimen/checkbox_size" android:width="@dimen/checkbox_size"/>
            <corners android:radius="@dimen/checkbox_corner_radius"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/checkbox_button_enabled_checked"/>
                    <size android:height="@dimen/checkbox_size" android:width="@dimen/checkbox_size"/>
                    <corners android:radius="@dimen/checkbox_corner_radius"/>
                </shape>
            </item>
            <item>
                <inset android:insetLeft="@dimen/checkbox_insetLeft" android:insetRight="@dimen/checkbox_insetRight" android:insetTop="@dimen/checkbox_insetTop" android:insetBottom="@dimen/checkbox_insetBottom">
                    <bitmap android:src="@drawable/white_check_small"/>
                </inset>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/checkbox_border_width" android:color="@color/checkbox_button_enabled_unchecked"/>
            <solid android:color="@color/transparent"/>
            <size android:height="@dimen/checkbox_size" android:width="@dimen/checkbox_size"/>
            <corners android:radius="@dimen/checkbox_corner_radius"/>
        </shape>
    </item>
</selector>
