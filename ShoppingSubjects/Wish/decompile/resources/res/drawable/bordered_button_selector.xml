<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="false" android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/thin_separator" android:color="@color/main_primary"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_button_disabled"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/thin_separator" android:color="@color/main_primary"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_primary"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/thin_separator" android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_primary"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/thin_separator" android:color="@color/white"/>
        </shape>
    </item>
</selector>
