        <shape android:shape="rectangle">
            <solid android:color="@color/google_red_translucent"/>
            <corners android:radius="@dimen/login_fragment_redesign_corner_radius"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/google_red_dark"/>
            <corners android:radius="@dimen/login_fragment_redesign_corner_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/google_red_primary"/>
            <corners android:radius="@dimen/login_fragment_redesign_corner_radius"/>
        </shape>
    </item>
