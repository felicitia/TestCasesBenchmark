<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/filter_button_inactive_border" android:color="@color/filter_button_selectable"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/filter_button_active_border" android:color="@color/main_primary"/>
        </shape>
    </item>
</selector>
