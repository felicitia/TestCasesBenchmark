<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/main_primary"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/gray5"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="@dimen/update_profile_redesign_image_border" android:color="@android:color/transparent"/>
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
