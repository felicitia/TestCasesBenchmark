<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/shaky_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ToolbarStyle"/>
    <ScrollView android:layout_gravity="center_horizontal" android:id="@+id/shaky_scrollView" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/content_area_padding" android:paddingTop="@dimen/content_top_padding" android:paddingRight="@dimen/content_area_padding" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textColor="@color/cool_gray1" android:id="@+id/shaky_form_message" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/shaky_message_hint" android:inputType="none|text|textCapSentences|textMultiLine"/>
            <LinearLayout android:orientation="vertical" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/section_padding">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/shaky_form_attachment" android:background="@android:color/white" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="@dimen/screenshot_height" android:adjustViewBounds="true" android:contentDescription="@string/shaky_image_action" android:elevation="@dimen/soft_shadow"/>
                <TextView android:gravity="start" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/content_top_padding" android:text="@string/shaky_image_action" android:textAlignment="textStart"/>
                <TextView android:gravity="start" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/footer_padding" android:text="@string/shaky_email_direction" android:textAlignment="textStart"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
