<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/white_background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="match_parent" android:layout_height="@dimen/select_wishlist_header_height">
            <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/create_wishlist_cancel_button" android:layout_width="@dimen/wishlist_close_button_size" android:layout_height="@dimen/wishlist_close_button_size" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding" app:drawable="@drawable/textview_clear_96"/>
        </FrameLayout>
        <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_menu" android:textStyle="bold" android:textColor="@color/text_primary" android:ellipsize="end" android:gravity="center" android:id="@+id/create_wishlist_title" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/triple_screen_padding" android:layout_marginRight="@dimen/triple_screen_padding" android:text="@string/create_a_new_wishlist" android:maxLines="1" android:resizeable="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/twenty_four_padding">
            <com.contextlogic.wish.ui.text.ThemedEditText android:textSize="@dimen/text_size_menu" android:textColor="@color/cool_gray1" android:textColorHint="@color/cool_gray3" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/create_wishlist_name_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/wishlist_name_hint" android:maxLength="99" android:inputType="none|text|textCapWords|textEmailAddress|textShortMessage|textPersonName" android:imeOptions="actionDone" android:backgroundTint="@color/main_primary"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body_sp" android:textStyle="bold" android:textColor="@color/cool_gray1" android:gravity="center" android:id="@+id/create_wishlist_suggestion_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/twenty_four_padding" android:text="@string/wishlist_suggestion"/>
            <include layout="@layout/create_wishlist_dialog_fragment_suggestion_table"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/create_wishlist_modal_done_button" android:background="@drawable/main_button_selector" android:paddingLeft="@dimen/triple_screen_padding" android:paddingTop="@dimen/screen_padding" android:paddingRight="@dimen/triple_screen_padding" android:paddingBottom="@dimen/screen_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/twenty_four_padding" android:text="@string/create_wishlist_button_text" android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
