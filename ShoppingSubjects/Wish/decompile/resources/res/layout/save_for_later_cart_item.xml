<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/shadow_top" android:background="@color/gray5" android:layout_width="match_parent" android:layout_height="@dimen/shadow"/>
    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body_sp" android:textStyle="bold" android:textColor="@color/gray1" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/header_view_section_title" android:background="@color/light_divider" android:paddingLeft="@dimen/sixteen_padding" android:paddingTop="@dimen/sixteen_padding" android:paddingBottom="@dimen/twelve_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/saved_for_later"/>
    <View android:id="@+id/shadow_bottom" android:background="@color/gray5" android:layout_width="match_parent" android:layout_height="@dimen/shadow"/>
    <RelativeLayout android:id="@+id/item_row_holer" android:padding="@dimen/sixteen_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/cart_fragment_cart_items_item_row_left_column" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/sixteen_padding" android:layout_alignParentLeft="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.contextlogic.wish.ui.image.NetworkImageView android:id="@+id/cart_fragment_cart_items_item_row_image" android:layout_width="@dimen/cart_fragment_full_cart_items_row_image_size" android:layout_height="@dimen/cart_fragment_full_cart_items_row_image_size"/>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/cart_fragment_cart_items_item_row_countdown_container" android:background="@color/full_screen_cart_item_counter_background" android:layout_width="@dimen/cart_fragment_full_cart_items_row_image_size" android:layout_height="@dimen/cart_fragment_full_cart_items_row_counter_height"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/cart_fragment_cart_items_item_row_right_column" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/cart_fragment_cart_items_item_row_price_container" android:layout_toRightOf="@+id/cart_fragment_cart_items_item_row_left_column">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/cart_fragment_cart_items_item_row_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="false"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/cool_gray3" android:layout_gravity="top" android:id="@+id/cart_fragment_cart_items_item_row_size_color_text" android:paddingTop="@dimen/four_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false"/>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/save_for_later_remove_add_to_cart_holder" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/eight_padding" android:layout_toRightOf="@+id/cart_fragment_cart_items_item_row_left_column" android:layout_below="@+id/cart_fragment_cart_items_item_row_right_column" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textColor="@color/gray3" android:id="@+id/remove_from_sfl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/eight_padding" android:text="@string/remove" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textStyle="bold" android:textColor="@color/orange" android:id="@+id/add_to_cart_button" android:background="@drawable/bordered_orange_button_selector" android:paddingLeft="@dimen/sixteen_padding" android:paddingTop="@dimen/eight_padding" android:paddingRight="@dimen/sixteen_padding" android:paddingBottom="@dimen/eight_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_to_cart" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/cart_fragment_cart_items_item_row_price_container" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/twenty_four_padding" android:layout_alignParentRight="true">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textColor="@color/cool_gray1" android:layout_gravity="right" android:id="@+id/cart_fragment_cart_items_item_row_your_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textColor="@color/cool_gray3" android:layout_gravity="right" android:id="@+id/cart_fragment_cart_items_item_row_list_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/cart_fragment_cart_items_item_row_spacer" android:background="@color/light_divider" android:layout_width="match_parent" android:layout_height="@dimen/thin_separator" android:layout_marginLeft="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding"/>
</LinearLayout>
