<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <include layout="@layout/thin_grey_divider"/>
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/sixteen_padding" android:paddingTop="@dimen/twenty_four_padding" android:paddingRight="@dimen/sixteen_padding" android:paddingBottom="@dimen/twenty_four_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/store_info_header" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/product_details_fragment_overview_section_title_text_size" android:textStyle="bold" android:textColor="@color/text_primary" android:layout_gravity="center" android:id="@+id/store_info_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sold_by"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/product_details_fragment_overview_section_blue_text_size" android:textColor="@color/text_selector_main_primary" android:gravity="end" android:id="@+id/merchant_info_visit_store" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/product_details_fragment_overview_title_subtitle_distance" android:text="@string/ratings_visit_store" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/store_info_body" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingTop="@dimen/sixteen_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.contextlogic.wish.ui.image.NetworkImageView android:id="@+id/merchant_info_merchant_image" android:layout_width="@dimen/product_details_fragment_store_info_merchant_image" android:layout_height="@dimen/product_details_fragment_store_info_merchant_image" android:layout_marginRight="@dimen/eight_padding"/>
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textStyle="bold" android:textColor="@color/cool_gray1" android:id="@+id/merchant_info_section_title" android:paddingBottom="@dimen/four_padding" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textColor="@color/cool_gray2" android:id="@+id/merchant_info_section_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/merchant_info_details_divider" android:background="@color/cool_gray5" android:layout_width="match_parent" android:layout_height="@dimen/divider" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginBottom="@dimen/sixteen_padding"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/merchant_info_details_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/merchant_info_badge_section_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/store_info_badge_section_height">
            <com.contextlogic.wish.ui.image.NetworkImageView android:layout_gravity="center_vertical" android:id="@+id/merchant_info_badge_section_badge_img" android:layout_width="@dimen/store_info_badge_section_badge_width" android:layout_height="@dimen/store_info_badge_section_badge_height" android:layout_marginLeft="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textStyle="bold" android:id="@+id/merchant_info_badge_section_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:id="@+id/merchant_info_badge_section_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>
