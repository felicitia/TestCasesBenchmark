                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.contextlogic.wish.activity.login.LoginFormEditText android:textSize="@dimen/text_size_body_sp" android:textColorHint="@color/text_light_hint" android:gravity="start" android:id="@+id/create_account_fragment_first_name_text" android:background="@drawable/login_fragment_redesign_edit_text_background" android:nextFocusDown="@+id/create_account_fragment_last_name_text" android:layout_width="0dp" android:layout_height="@dimen/login_fragment_redesign_button_height" android:layout_marginRight="@dimen/four_padding" android:hint="@string/first_name" android:layout_weight="1" android:inputType="none|text|textCapWords|textEmailAddress|textShortMessage|textPersonName"/>
