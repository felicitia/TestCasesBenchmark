        <LinearLayout android:orientation="horizontal" android:id="@+id/login_fragment_white_cover" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/login_fragment_redesign_header_height"/>
    </FrameLayout>
</FrameLayout>
