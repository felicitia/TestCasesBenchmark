                <com.contextlogic.wish.activity.login.signin.LoginFormDropdownEditText android:textSize="@dimen/text_size_body_sp" android:textColor="@color/text_primary" android:textColorHint="@color/text_light_hint" android:gravity="start" android:id="@+id/create_account_fragment_email_text" android:background="@drawable/login_fragment_redesign_edit_text_background" android:nextFocusDown="@+id/create_account_fragment_password_text" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_button_height" android:layout_marginTop="@dimen/eight_padding" android:hint="@string/email_address" android:inputType="textEmailAddress"/>
