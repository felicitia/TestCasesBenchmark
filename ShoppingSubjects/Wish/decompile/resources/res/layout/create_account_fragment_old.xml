            </LinearLayout>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body_sp" android:textColor="@color/main_primary" android:layout_gravity="center_horizontal" android:id="@+id/create_account_Fragment_freegift_text_bottom" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/four_padding" android:text="@string/new_users_get_a_free_gift" android:layout_centerHorizontal="true"/>
