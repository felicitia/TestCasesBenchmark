            <LinearLayout android:gravity="top" android:orientation="horizontal" android:id="@+id/create_account_fragment_freegift_timer" android:background="@color/free_gift_timer_background" android:padding="@dimen/ten_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sixteen_padding" android:layout_marginTop="@dimen/twenty_padding" android:layout_marginRight="@dimen/sixteen_padding">
