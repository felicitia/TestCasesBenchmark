<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/cart_shipping_view_floating_bottom_padding">
            <LinearLayout android:orientation="vertical" android:padding="@dimen/sixteen_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/text_secondary" android:gravity="left" android:id="@+id/required_fields_indicator" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/half_screen_padding" android:text="@string/asterisk_indicates_a_field_is_required"/>
                <com.contextlogic.wish.activity.cart.shipping.ShippingAddressFormViewRedesign android:id="@+id/cart_fragment_cart_shipping_shipping_form_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/cart_fragment_cart_shipping_inline_done_button" android:background="@drawable/primary_button_selector" android:layout_width="match_parent" android:layout_height="@dimen/default_button_height" android:layout_marginTop="@dimen/screen_padding"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/cart_fragment_cart_shipping_floating_done_button_container" android:background="@drawable/white_background" android:padding="@dimen/sixteen_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/cart_fragment_cart_shipping_floating_done_button" android:background="@drawable/primary_button_selector" android:layout_width="match_parent" android:layout_height="@dimen/default_button_height"/>
        </LinearLayout>
    </FrameLayout>
</merge>
