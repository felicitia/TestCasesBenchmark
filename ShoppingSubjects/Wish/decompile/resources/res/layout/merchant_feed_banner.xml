<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/screen_padding" android:layout_marginBottom="@dimen/screen_padding">
        <com.contextlogic.wish.ui.image.NetworkImageView android:id="@+id/merchant_feed_banner_image" android:layout_width="@dimen/merchant_banner_image_size" android:layout_height="@dimen/merchant_banner_image_size" android:layout_margin="@dimen/screen_padding"/>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/screen_padding" android:layout_weight="1">
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textStyle="bold" android:textColor="@color/text_primary" android:ellipsize="end" android:gravity="left" android:id="@+id/merchant_feed_banner_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/text_primary" android:ellipsize="end" android:gravity="left" android:id="@+id/merchant_feed_banner_product_count" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/merchant_feed_banner_rating_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/half_screen_padding">
                <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="center" android:id="@+id/merchant_feed_banner_rating_image_one" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="center" android:id="@+id/merchant_feed_banner_rating_image_two" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="center" android:id="@+id/merchant_feed_banner_rating_image_three" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="center" android:id="@+id/merchant_feed_banner_rating_image_four" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="center" android:id="@+id/merchant_feed_banner_rating_image_five" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/half_screen_padding"/>
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/text_secondary" android:ellipsize="end" android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/merchant_feed_banner_rating_count" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            </LinearLayout>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/main_primary" android:ellipsize="end" android:gravity="left" android:id="@+id/merchant_feed_banner_view_ratings" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_all_ratings"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
