<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/signup_free_gift_billing_view_floating_bottom_next_layout">
        <LinearLayout android:gravity="top|center_vertical|center_horizontal|center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:layout_gravity="left" android:orientation="horizontal" android:id="@+id/signup_free_gift_billing_view_header" android:padding="@dimen/screen_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/screen_padding">
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textStyle="bold" android:textColor="@color/text_primary" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bill_to_colon" android:singleLine="false"/>
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/text_secondary" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/signup_free_gift_billing_view_cancel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/no_thanks" android:layout_weight="1"/>
            </LinearLayout>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/text_primary" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/cart_billing_view_almost_done_textview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/cart_billing_view_signup_cart_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:gravity="center" android:layout_gravity="left" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <com.contextlogic.wish.ui.image.NetworkImageView android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/cart_billing_view_product_image" android:layout_width="100dp" android:layout_height="100dp"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textColor="@color/text_primary" android:layout_gravity="center_vertical" android:id="@+id/cart_billing_view_cost_message" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="1"/>
                </LinearLayout>
                <RelativeLayout android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/text_primary" android:id="@+id/cart_billing_view_subtotal" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/subtotal_colon" android:singleLine="true" android:layout_alignParentLeft="true"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textColor="@color/text_primary" android:gravity="right" android:id="@+id/cart_billing_view_subtotal_original" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:singleLine="true" android:layout_toLeftOf="@+id/cart_billing_view_subtotal_new"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textColor="@color/text_primary" android:gravity="right" android:id="@+id/cart_billing_view_subtotal_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="left" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/text_primary" android:id="@+id/cart_billing_view_shipping" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/shipping" android:layout_weight="1"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textColor="@color/text_primary" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/cart_billing_view_shipping_cost" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="left" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/text_primary" android:id="@+id/cart_billing_view_total" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/total_colon" android:layout_weight="1"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/text_primary" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/cart_billing_view_total_cost" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                </LinearLayout>
                <View android:id="@+id/cart_billing_view_signup_cart_divider" android:background="@color/text_hint" android:layout_width="match_parent" android:layout_height="1dp"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/signup_free_gift_billing_view_header_placeholder" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.contextlogic.wish.activity.cart.billing.paymentform.CreditCardPaymentFormView android:id="@+id/signup_free_gift_billing_view_credit_card" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.contextlogic.wish.activity.cart.billing.paymentform.PayPalPaymentFormView android:id="@+id/signup_free_gift_billing_view_paypal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/signup_free_gift_billing_view_inline_bottom_next_button" android:background="@drawable/orange_button_selector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/default_button_height" android:layout_margin="@dimen/screen_padding"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:id="@+id/signup_free_gift_billing_view_floating_bottom_next_layout" android:padding="@dimen/screen_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_button" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/signup_free_gift_billing_view_floating_bottom_next_button" android:background="@drawable/orange_button_selector" android:layout_width="match_parent" android:layout_height="@dimen/default_button_height"/>
    </LinearLayout>
</RelativeLayout>
