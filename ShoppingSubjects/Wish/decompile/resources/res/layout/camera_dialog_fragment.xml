<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/camera_dialog_main_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.contextlogic.wish.ui.image.AutoReleasableImageView android:id="@+id/camera_dialog_tooltip" android:layout_width="wrap_content" android:layout_height="wrap_content" app:drawable="@drawable/camera_dialog_tooltip"/>
