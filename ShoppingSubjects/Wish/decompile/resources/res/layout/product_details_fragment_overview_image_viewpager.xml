<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.contextlogic.wish.ui.viewpager.SafeViewPager android:id="@+id/product_details_fragment_overview_image_viewpager" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:layout_gravity="top" android:orientation="horizontal" android:id="@+id/product_details_fragment_overview_uploader_layout" android:background="@color/dark_translucent_toolbar" android:paddingRight="@dimen/product_details_fragment_uploader_layout_padding_right" android:layout_width="match_parent" android:layout_height="@dimen/product_details_fragment_uploader_layout_height" android:weightSum="1">
