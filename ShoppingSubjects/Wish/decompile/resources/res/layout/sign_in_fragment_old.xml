<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/login_fragment_content_container" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:id="@+id/sign_in_fragment_scroller" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:focusableInTouchMode="true" android:descendantFocusability="beforeDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.contextlogic.wish.activity.login.header.LoginHeaderView android:id="@+id/login_fragment_header_view" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_header_height"/>
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_sign_in_fragment_redesign_sign_in" android:textColor="@color/text_primary" android:id="@+id/sign_in_fragment_sign_in_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sixteen_padding" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding" android:text="@string/sign_in"/>
                <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textColor="@color/red" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/sign_free_gift_warning" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/four_padding" android:text="@string/only_new_users_get_a_free_gift" android:layout_centerHorizontal="true"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/sign_in_fragment_body_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding">
                    <com.contextlogic.wish.activity.login.signin.LoginFormDropdownEditText android:textSize="@dimen/text_size_body" android:textColor="@color/text_primary" android:textColorHint="@color/text_light_hint" android:gravity="start" android:id="@+id/sign_in_fragment_email_text" android:background="@drawable/login_fragment_redesign_edit_text_background" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_button_height" android:layout_marginTop="@dimen/sixteen_padding" android:hint="@string/email" android:inputType="textEmailAddress" android:imeOptions="actionNext" android:nextFocusForward="@+id/login_fragment_password_text"/>
                    <com.contextlogic.wish.activity.login.signin.LoginFormDropdownEditText android:textSize="@dimen/text_size_body" android:textColor="@color/text_primary" android:textColorHint="@color/text_light_hint" android:gravity="start" android:id="@+id/sign_in_fragment_password_text" android:background="@drawable/login_fragment_redesign_edit_text_background" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_button_height" android:layout_marginTop="@dimen/screen_padding" android:hint="@string/password" android:inputType="textPassword" android:imeOptions="actionDone"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_caption" android:textColor="@color/gray4" android:gravity="end" android:id="@+id/sign_in_fragment_forgot_password_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/eight_padding" android:text="@string/forgot_password_question"/>
                    <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_subtitle" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/sign_in_fragment_sign_in_button" android:background="@drawable/main_button_selector" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_button_height" android:layout_marginTop="@dimen/sixteen_padding" android:text="@string/sign_in" android:textAllCaps="false"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/sign_in_fragment_bottom_content_container" android:layout_width="match_parent" android:layout_height="match_parent">
                        <RelativeLayout android:id="@+id/sign_in_fragment_separator" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/eight_padding">
                            <com.contextlogic.wish.ui.text.ThemedTextView android:textColor="@color/gray4" android:id="@+id/login_fragment_divider_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/eight_padding" android:layout_marginRight="@dimen/eight_padding" android:text="@string/login_fragment_divider_text" android:layout_centerInParent="true"/>
                            <View android:background="@color/gray5" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_divider_height" android:layout_toLeftOf="@+id/login_fragment_divider_text" android:layout_centerVertical="true"/>
                            <View android:background="@color/gray5" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_divider_height" android:layout_toRightOf="@+id/login_fragment_divider_text" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <com.contextlogic.wish.activity.login.SignInSignUpSocialButtonsLayout android:orientation="horizontal" android:id="@+id/sign_in_fragment_social_buttons_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/eight_padding"/>
                        <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_body" android:textStyle="bold" android:textColor="@color/main_primary" android:gravity="center" android:id="@+id/sign_in_fragment_create_account_button" android:background="@drawable/login_fragment_create_account_selector" android:layout_width="match_parent" android:layout_height="@dimen/login_fragment_redesign_button_height" android:layout_marginTop="@dimen/eight_padding" android:text="@string/create_new_account" android:textAllCaps="false"/>
                        <com.contextlogic.wish.ui.text.ThemedTextView android:textSize="@dimen/text_size_fourteen" android:textColor="@color/gray4" android:layout_gravity="center_horizontal" android:id="@+id/sign_in_fragment_create_account_text_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sixteen_padding"/>
                        <com.contextlogic.wish.activity.termspolicy.TermsPolicyTextView android:textSize="@dimen/text_size_terms_policy" android:textColor="@color/gray3" android:gravity="center" android:id="@+id/sign_in_fragment_terms_policy" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginBottom="@dimen/sixteen_padding"/>
                        <com.contextlogic.wish.activity.termspolicy.TermsPolicyTextView android:textSize="@dimen/text_size_terms_policy" android:textColor="@color/gray3" android:gravity="center" android:id="@+id/sign_in_fragment_terms_policy_full_ver" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginBottom="@dimen/sixteen_padding" app:fullTextPlaceHolder="@string/terms_policy_placeholder_sign_in"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>
