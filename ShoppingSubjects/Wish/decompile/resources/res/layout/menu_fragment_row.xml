        <com.contextlogic.wish.ui.image.AutoReleasableImageView android:layout_gravity="center" android:id="@+id/menu_fragment_row_image" android:layout_width="@dimen/menu_fragment_row_image_size" android:layout_height="@dimen/menu_fragment_row_image_size" android:layout_marginLeft="@dimen/menu_horizontal_padding"/>
