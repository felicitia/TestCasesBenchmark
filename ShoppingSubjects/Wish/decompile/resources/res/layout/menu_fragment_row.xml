<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="@dimen/menu_fragment_row_height">
    <View android:layout_gravity="bottom" android:id="@+id/fragment_menu_separator" android:background="@color/light_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/menu_fragment_separator_height"/>
