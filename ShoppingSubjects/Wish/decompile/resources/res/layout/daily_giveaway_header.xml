            <com.contextlogic.wish.activity.feed.dailygiveaway.DailyGiveawayTabStrip android:id="@+id/daily_giveaway_tab_strip" android:layout_width="match_parent" android:layout_height="@dimen/daily_giveaway_tab_height" android:layout_marginTop="@dimen/daily_giveaway_tab_top_margin"/>
        </LinearLayout>
    </RelativeLayout>
    <com.contextlogic.wish.activity.feed.dailygiveaway.DailyGiveawayStatusBox android:id="@+id/daily_giveaway_status_box" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sixteen_padding" android:layout_marginTop="@dimen/sixteen_padding" android:layout_marginRight="@dimen/sixteen_padding"/>
</LinearLayout>
